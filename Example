x_true= [
    [1.0, 12.0, 31.5, 4.5],
    [4.0, 2.0, 3.5, 5.5],
    [10.0, 12.3, 1.5, 4],

]
y_true= [1.3, 9.7, 4.0]

y_pred= [Neuron(4)(x) for x in x_true]
print(y_pred)

loss = sum([(yy-y)**2 for y,yy in zip(y_true, y_pred)], Value(0.0))
print(loss)
loss.backward()
print(draw_dot(loss).render('loss', format='png', cleanup= True))



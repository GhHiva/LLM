# ['<S>'] + list('emma') + ['<E>'] = ['<S>'] + ['e','m','m','a'] + ['<E>'] = ['<S>','e','m','m','a','<E>']
____________________________________________________________________________________________________________
____________________________________________________________________________________________________________

name  = ['emma', 'olivia', 'ava']
b = dict()
for w in name:
  chs = ['<S>'] + list(w) + ['<E>']
  for ch1,ch2 in zip(chs,chs[1:]):
      bi = (ch1,ch2)
      b[bi] = b.get(bi,0)+1 # returns the value of key if it's present else get it zero and add it to 1
      print(b)


# output: {('<S>', 'e'): 1, ('e', 'm'): 1, ('m', 'm'): 1, ('m', 'a'): 1, ('a', '<E>'): 3, ('<S>', 'o'): 1, 
                        ('o', 'l'): 1, ('l', 'i'): 1, ('i', 'v'): 1, ('v', 'i'): 1, ('i', 'a'): 1, ('<S>', 'a'): 1, ('a', 'v'): 1, ('v', 'a'): 1}

